{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "multer"]
  },
  "include": ["src/**/*", "public/script.js", "public/server.js"],
  "exclude": ["node_modules"]
}
